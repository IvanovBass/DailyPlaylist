<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DailyPlaylist.View.LoginPage"
             xmlns:vm="clr-namespace:DailyPlaylist.ViewModel"
             x:DataType="vm:LoginViewModel"
             BackgroundColor="{StaticResource Gray900}"
             Shell.NavBarIsVisible="false"
             Title="Login">

    <ScrollView>
        <VerticalStackLayout Spacing="30" Padding="30, 15" VerticalOptions="Center" HorizontalOptions="Center">
            <Image Source="icon.png"   HeightRequest="150" Margin="0,0,0,20" />
            <Frame  Opacity="0.8"  CornerRadius="7" HeightRequest="60">
                <Entry Placeholder="Email" Text="{Binding EmailText}" FontSize="16" BackgroundColor="Transparent"/>
            </Frame>
            <Frame Opacity="0.8" CornerRadius="7" Margin="0,15,0,0"  HeightRequest="60">
                <Entry Placeholder="Password" IsPassword="True"  Text="{Binding PasswordText}" FontSize="17"
                       BackgroundColor="Transparent"/>
            </Frame>
           <Button Text="Login"  Command="{Binding LoginCommand}"/>
            <Button Text="Create Account"  Command="{Binding CreateCommand}"/>

        </VerticalStackLayout>

    </ScrollView>
            

