<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:DailyPlaylist.Model"
             xmlns:vm="clr-namespace:DailyPlaylist.ViewModel"
             x:Class="DailyPlaylist.View.PlaylistPage"
             Title="Playlists">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!  This is the playlist page"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Label Text="{Binding SelectedTrackTitle}" />
            <Label Text="{Binding SelectedTrackArtist}" />
            <Image Source="{Binding SelectedTrackCover}"  HeightRequest="200"/>
            <Label  Text="{Binding ActiveUser.Email}" />
        </StackLayout>
        
            
    </VerticalStackLayout>
</ContentPage>